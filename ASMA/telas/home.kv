
<Home>:
    name:'home'
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            text: 'AQUI É A HOME PAGE'
            size_hint_y: 0.5

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1

            Button:
                text: 'Sobre nós'
                size_hint_x: 0.33
                on_press: app.root.current = 'sobre'

            Button:
                text: 'Home'
                size_hint_x: 0.33
                on_press: app.root.current = 'home'

            Button:
                text: 'Previsões'
                size: 50, 25
                on_press: app.root.current = 'prev'