
<Home>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0, 25, 229, 230
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            text: 'Minha Label'
            size_hint_y: 0.5

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1

            Button:
                text: 'Sobre nós'
                size_hint_x: 0.33
                on_press: app.button_pressed(1)

            Button:
                text: 'Home'
                size_hint_x: 0.33
                on_press: app.button_pressed(2)

            Button:
                text: 'Previsões'
                size: 50, 25