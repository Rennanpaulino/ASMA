<sobrenos>:
    name:'sobrenos'
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            text: 'Tela 2'
            size_hint_y: 0.5

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1

            Button:
                text: 'Sobre nós'
                size_hint_x: 0.33
                on_release: app.root.current = 'sobrenos'

            Button:
                text: 'Home'
                size_hint_x: 0.33
                on_release: app.root.current = 'home'

            Button:
                text: 'Previsões'
                size: 50, 25
                on_release: app.root.current = 'previsoes'