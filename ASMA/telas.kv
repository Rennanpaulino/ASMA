ScreenManager:
    HomeScreen:
    AboutUsScreen:
    PredictScreen:

<HomeScreen>:
    name: 'home'
    MDFloatLayout:
        MDIconButton:
            icon: "book"
            pos_hint: {"center_x": .15, "center_y": .05}
            on_press: app.root.current = 'aboutUs'  
        MDIconButton:
            icon: "home"
            pos_hint: {"center_x": .5, "center_y": .05} 
            on_press: app.root.current = 'home'     
        MDIconButton: 
            icon: "plus"
            pos_hint: {"center_x": .85, "center_y": .05}      
            on_press: app.root.current = 'predict'
        Image:
            source: "images/ASMA1.png"
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: .7, .7


